generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")

  relationShip UserRelationship? @relation("UserRelationShip", fields: [userRelationshipId], references: [id])
  relatedUser  UserRelationship? @relation("UserRelatedUser", fields: [userRelatedId], references: [id])

  userRelationshipId String? @unique @db.ObjectId
  userRelatedId      String? @unique @db.ObjectId

  @@unique([email])
  @@map("user")
}

model UserRelationship {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userRelationShip User? @relation("UserRelationShip")
  relatedUser  User? @relation("UserRelatedUser")

  @@map("user_relationship")
}

model Message {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  message    String
  userToId   String   @db.ObjectId
  userFromId String   @db.ObjectId
  createdAt  DateTime @default(now())
  liked      Boolean?

  userReceived User? @relation("ReceivedMessages", fields: [userToId], references: [id])
  userSent     User? @relation("SentMessages", fields: [userFromId], references: [id])

  @@map("message")
}

model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  accountId             String
  providerId            String
  userId                String    @db.ObjectId
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}
